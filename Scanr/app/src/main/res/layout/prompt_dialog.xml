<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/licence_formate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:text="Please Select Format"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="onFormatLicenseScan_1"
            android:paddingTop="10dp"
            android:src="@drawable/formate_one" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="onFormatLicenseScan_2"
            android:paddingTop="10dp"
            android:src="@drawable/formate_two_" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="onFormatLicenseScan_3"
            android:paddingTop="10dp"
            android:src="@drawable/formate_three"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
